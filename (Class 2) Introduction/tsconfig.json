{
  "compileOnSave": true,
  "compilerOptions": { // Tells the Typescript compiler how to compile the project
    "module": "commonjs", // How to compile modules
    "target": "es5", // Target version of Javascript
    "sourceMap": true, // Generates code for debugging
    "watch": true, // Tells the compiler to compile again if the code changes
    "strict": true, // Forces the developer to write code with good practices
    "outDir": "dist/" // Output directory name for compiled files
  },
  "include": [ // Tells the compiler from what folder compile files
    "src/**/*"
  ],
  "exclude": [ // Tells the compiler to not compile files in these directories
    "node_modules"
  ]
}